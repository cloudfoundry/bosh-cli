#!/usr/bin/env bash
set -eu -o pipefail

ROOT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )"

default_version='[DEV BUILD]'
VERSION_LABEL="${VERSION_LABEL:-${default_version}}"

go build \
  -o "${ROOT_DIR}/out/bosh" \
  -ldflags="-X 'github.com/cloudfoundry/bosh-cli/cmd.VersionLabel=${VERSION_LABEL}'" \
  "${ROOT_DIR}"
